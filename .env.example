# Database
POSTGRES_USER=notes_user
POSTGRES_PASSWORD=change_me_please
POSTGRES_DB=ai_notes
DATABASE_URL=postgresql+asyncpg://notes_user:change_me_please@db:5432/ai_notes

# Auth (generate: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=10080
# Set to false to disable new registrations (existing users can still log in)
ALLOW_REGISTRATION=true

# LLM (vLLM)
VLLM_BASE_URL=http://host.docker.internal:8000/v1
VLLM_MODEL=Qwen3-30B-A3B-Thinking-2507
VLLM_API_KEY=

# STT (faster-whisper: tiny, base, small, medium, large-v3, distil-large-v3).
# For better Russian: HuggingFace id dvislobokov/faster-whisper-large-v3-turbo-russian
WHISPER_MODEL=distil-large-v3
WHISPER_LANGUAGE=ru
# Local cache for model files (persists between restarts). In Docker use /data/whisper_cache + volume.
# WHISPER_CACHE_DIR=/data/whisper_cache
# Embeddings (sentence-transformers). In Docker use /data/embedding_cache + volume.
# EMBEDDING_CACHE_DIR=/data/embedding_cache

# Workspace: note content stored as workspace/{user_id}/{note_id}.md (Markdown files)
# In Docker use ./workspace bind mount. Default: workspace
# WORKSPACE_DIR=workspace

# Redis (for hybrid search)
REDIS_URL=redis://redis:6379
# Vector search: max COSINE distance (0=identical, 2=opposite); skip results above this
SEARCH_VECTOR_SCORE_THRESHOLD=0.65

# Chat agent (separate model for discussions)
VLLM_CHAT_BASE_URL=http://host.docker.internal:8000/v1
VLLM_CHAT_MODEL=Qwen3-30B-A3B-Thinking-2507
VLLM_CHAT_API_KEY=

# Agent settings defaults (per-user overrides in DB)
VLLM_TEMPERATURE=0.7
VLLM_FREQUENCY_PENALTY=0.0
VLLM_TOP_P=1.0
VLLM_MAX_TOKENS=16384

# CORS
CORS_ORIGINS=http://localhost,http://localhost:3000
